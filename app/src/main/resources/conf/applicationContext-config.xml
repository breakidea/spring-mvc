<beans xmlns="http://www.springframework.org/schema/beans"	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:util="http://www.springframework.org/schema/util"	xsi:schemaLocation="        http://www.springframework.org/schema/util http://www.springframework.org/schema/util/spring-util.xsd        http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">	<!-- 页面文案 -->	<bean name="viewMessageBean"		class="org.springframework.beans.factory.config.PropertiesFactoryBean">		<property name="locations">			<list>				<value>/WEB-INF/conf/*.properties</value>			</list>		</property>	</bean>	<!-- 国际化配置 -->	<bean id="messageSource"		class="org.springframework.context.support.ReloadableResourceBundleMessageSource">		<property name="basenames">			<list>				<value>/WEB-INF/conf/message/</value>			</list>		</property>		<property name="cacheSeconds" value="3600" />		<property name="useCodeAsDefaultMessage" value="true" />	</bean></beans>